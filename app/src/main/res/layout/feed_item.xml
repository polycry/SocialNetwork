<?xml version="1.0" encoding="utf-8"?>
<AbsoluteLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/txt_poster"
        android:layout_width="276dp"
        android:layout_height="wrap_content"
        android:layout_x="58dp"
        android:layout_y="2dp"
        android:text="TESTPoster" />

    <TextView
        android:id="@+id/txt_post"
        android:layout_width="274dp"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/txt_poster"
        android:layout_marginTop="19dp"
        android:layout_x="58dp"
        android:layout_y="38dp"
        android:text="TESTPOST" />

    <TextView
        android:id="@+id/txt_date"
        android:layout_width="272dp"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/txt_post"
        android:layout_marginTop="19dp"
        android:layout_x="59dp"
        android:layout_y="79dp"
        android:text="TESTDATUM" />

</AbsoluteLayout>
