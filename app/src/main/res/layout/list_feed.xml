<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/txt_poster"
        android:layout_width="276dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="27dp"
        android:layout_y="2dp"
        android:textSize="60px"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/txt_post"
        android:layout_width="274dp"
        android:layout_height="100dp"
        android:layout_alignLeft="@+id/txt_poster"
        android:layout_alignStart="@+id/txt_poster"
        android:layout_below="@+id/txt_poster"
        android:layout_marginTop="21dp"
        android:layout_x="58dp"
        android:layout_y="38dp"/>

    <TextView
        android:id="@+id/txt_date"
        android:layout_width="272dp"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/txt_poster"
        android:layout_alignRight="@+id/txt_poster"
        android:layout_below="@+id/txt_post"
        android:layout_marginTop="23dp"
        android:layout_x="59dp"
        android:layout_y="79dp"
        android:textStyle="italic" />


</RelativeLayout>
